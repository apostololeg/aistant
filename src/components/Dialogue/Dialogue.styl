.root
  display flex
  flex-direction column
  justify-content flex-end
  height calc(100 * var(--vh))

  & button
    background-color transparent !important
    animation fadeToDefaultColorOnce 1s ease-in-out

    &:active
      animation none

    & + &
      margin-left 5px

@keyframes fadeToDefaultColorOnce
  from
    color var(--active-color)
  to
    color var(--accent-color)


.header
  z-index 1
  position absolute
  top 0
  left 0
  display flex
  align-items center
  justify-content space-between
  width 100%
  padding var(--indent-m)

  &::before
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 120px
    background-image linear-gradient(to bottom, var(--decent-color) 70px, transparent)
    z-index -1


.hasUpdates
  position relative

  &::after
    content ''
    z-index 1
    position absolute
    top 4px
    right @top
    width 8px
    height @width
    border-radius 50%
    background-color var(--warning-color)
    animation pulseShadow 1s ease-in-out infinite

@keyframes pulseShadow
  0%
    box-shadow 0 0 0 0 var(--warning-color)
  70%
    box-shadow 0 0 0 10px transparent
  100%
    box-shadow 0 0 0 0 transparent


.message
  position relative
  padding var(--indent-m)
  word-break break-word

  &:first-child
    margin-top 100px

  &:last-child
    margin-bottom 120px

  & + &
    margin-top var(--indent-m)

  &.user
    background-color var(--accent-color-alpha-100)

.duration
  font-size 80%
  opacity 0.5
  display inline
