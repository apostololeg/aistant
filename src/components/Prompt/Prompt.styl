.root
  position absolute
  bottom 0
  left 0
  width 100%
  padding var(--indent-m)
  padding-top 0

  &::before
    content ''
    position absolute
    bottom 0
    left 0
    width 100%
    height 100px
    background-image linear-gradient(to top, var(--decent-color) 50%, transparent)
    pointer-events none

.error
  font-size 60%

.input
.input > label
  width 100%

.input
  backdrop-filter blur(10px)

.buttonsPlaceholder
  width 100px
  popinter-events none

.buttons
  z-index 1
  position absolute
  right 40px
  bottom 25px
  transform scale(1.2)

  display flex
  flex-shrink 0
  margin-right -7px
